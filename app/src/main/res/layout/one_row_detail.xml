<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >
        <TextView
            android:id="@+id/oneRow_nature"
            android:layout_width="wrap_content"
            android:text="@string/nature_du_trasation"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            >
        </TextView>
        <TextView
            android:id="@+id/oneRow_date"
            android:layout_width="wrap_content"
            android:text="@string/date_de_la_transaction"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oneRow_nature"
            android:textStyle="italic"
            android:textSize="16sp"

            />
    <TextView
        android:id="@+id/oneRow_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/montant"
        android:layout_toRightOf="@+id/oneRow_date"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"

        />
</RelativeLayout>